<?xml version="1.0" encoding="utf-8" ?>
		<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
		                   assembly="DSSGenNHibernate"
		                   namespace="DSSGenNHibernate.EN.Moodle">
				
<joined-subclass name="AlumnoEN" extends="DSSGenNHibernate.EN.Moodle.UsuarioComunEN" table="[Alumno]">
	<key>
    		<column name="[email]"/>
   	</key>

					<property name="Cod_alumno" type="integer"> 
						<column name="[cod_alumno]"  unique="true" not-null="true"/>
					</property>
					<property name="Baneado" type="boolean"> 
						<column name="[baneado]"  not-null="true"/>
					</property>
			
			
			
		  			
						<bag name="Tutorias" >
							<key>
								<column name="[FK_email_alumno]"/>
					      	</key>
							<one-to-many class="DSSGenNHibernate.EN.Moodle.TutoriaEN"/>
					    </bag>
					
			
		  			
						<bag name="Grupos_trabajo" table="[grupotrabajo_alumno]"  >
							<key>
									<column name="[FK_email_alumnos]"/>
							</key>
      						<many-to-many class="DSSGenNHibernate.EN.Moodle.GrupoTrabajoEN">
									<column name="[FK_id_grupos_trabajo]"/>
      						</many-to-many>
    					</bag>
			
		  			
					
							<many-to-one name="Expediente" class="DSSGenNHibernate.EN.Moodle.ExpedienteEN" cascade="delete">
								<column name="[FK_id_expediente]"/>
        					</many-to-one>
					 
						
			
		  			
						<bag name="Entregas" >
							<key>
								<column name="[FK_email_alumno]"/>
					      	</key>
							<one-to-many class="DSSGenNHibernate.EN.Moodle.EntregaAlumnoEN"/>
					    </bag>
					
			
		  			
						<bag name="Sistemas_evaluacion" >
							<key>
								<column name="[FK_email_alumno]"/>
					      	</key>
							<one-to-many class="DSSGenNHibernate.EN.Moodle.EvaluacionAlumnoEN"/>
					    </bag>
					
			
		  			
						<bag name="Controles" >
							<key>
								<column name="[FK_email_alumno]"/>
					      	</key>
							<one-to-many class="DSSGenNHibernate.EN.Moodle.ControlAlumnoEN"/>
					    </bag>
					
					
					
					
					
					
					
					
					
		
		  </joined-subclass>	
		  
		  <query name="AlumnoENReadAllHQL">from AlumnoEN</query>
		  <query name="AlumnoENreadCantidadHQL"><![CDATA[select count(*) FROM AlumnoEN]]></query>
		  <query name="AlumnoENreadCodHQL"><![CDATA[FROM AlumnoEN alu where alu.Cod_alumno =:cod ]]></query>
		  <query name="AlumnoENreadCantidadPorGrupoHQL"><![CDATA[select count (*) FROM AlumnoEN as alu INNER JOIN alu.Grupos_trabajo as grupo where grupo.Id=:id]]></query>
		  <query name="AlumnoENreadCantidadIngresablesEnGrupoHQL"><![CDATA[select count (distinct alu) FROM AlumnoEN as alu INNER JOIN alu.Sistemas_evaluacion as eval INNER JOIN eval.Sistema_evaluacion as sist INNER JOIN sist.Asignatura as asig INNER JOIN asig.Grupos_trabajo as grupo where grupo.Id=:id AND alu NOT MEMBER OF grupo.Alumnos ]]></query>
		  <query name="AlumnoENreadAllIngresablesEnGrupoHQL"><![CDATA[select distinct alu FROM AlumnoEN as alu INNER JOIN alu.Sistemas_evaluacion as eval INNER JOIN eval.Sistema_evaluacion as sist INNER JOIN sist.Asignatura as asig INNER JOIN asig.Grupos_trabajo	as grupo where grupo.Id=:id AND alu NOT MEMBER OF grupo.Alumnos]]></query>
		</hibernate-mapping>
	